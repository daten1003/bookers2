    <div class="col-md-3"><!-- 左側部分 -->
      <h2>User info</h2>
      <%=image_tag current_user.get_profile_image(100,100)%><!-- プロフィール画像 -->


      <table class ="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th> <!-- ログイン者の名前 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th> <!-- ログイン者のintroduction -->
          </tr>
        </tbody>
      </table>
      <%=link_to edit_user_path(current_user.id) do %>
      <p class="btn btn-outline-secondary btn-block">
        <i class="fa-solid fa-user-gear"></i>
      </p>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: bok, method: :post do |f| %>
        <label for="book_title">Title</label>
        <%=f.text_field :title, class:'form-control book_title' %>

        <label for="book_opinion">Opinion</label>
        <%=f.text_area :body, class:'form-control book_body' %>

        <%=f.submit 'Create Book',class: 'btn btn-success mt-3' %>
      <% end %>
    </div>